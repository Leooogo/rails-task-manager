<div class="container my-5">
  <div class="task-title">
    <h1><%= @task.title %></h1>
    <div class="btn btn-ghost">
      <i class="fas fa-pen"></i>
      <%= link_to 'Edit this task', edit_path(@task) %>
    </div> 
  </div>
  
  <div class="detail"><%= @task.details %></div>
  <% if @task.completed? %>
  <p><i class="fas fa-check-square"></i> This task is completed</p>
  <% else %>
  <p><i class="far fa-square"></i> This task is not completed yet</p>
  <% end %>
  <p class="back"><i class="fas fa-undo"></i> <%= link_to "Back to list", index_path %></p>
</div>